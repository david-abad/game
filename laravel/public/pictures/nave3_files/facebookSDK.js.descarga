                        }else{
                            if(fb_debug_console) consoleLog(response.error);
                        }
                    }
                );
            } else{
              //alert(JSON.stringify(response.error));
            }
        }); 
    } catch (e){
        if(fb_debug_console) consoleLog("error: " + e.message);
    }
}

var tmpUser = {};

function doFacebookLogIn(user){
    if(fb_debug_console) consoleLog(user);
    tmpUser = user;

    if(fb_debug_console) consoleLog("user FB: " + JSON.stringify(user));
    if(!user.email || user.email == ""){
        if(fb_debug_console) consoleLog('User did not share his email.');

        var userTmp = "";
        if(user.first_name && user.first_name != ""){
            userTmp = user.first_name;
        } else{
            userTmp = user.id_facebook;
        }

        user.email = userTmp + "@"  + user.id_facebook + "_facebook_email_not_provided";
        //displayGlobalMessage("You need to share your email in Facebook in order to register/Login", "Facebook Error");
        //return;
    }

    if(isFacebookRegistry){
        var url = "/ajax/signup/";
        user.username_join = user.email;
    } else{//is Login        
        user = {'user_id':user.id_facebook, 'type_user_id':'facebook', 'username_login': user.email};
        var url = "/ajax/login/";
    }

    if(fb_debug_console) consoleLog("user Obj: " + JSON.stringify(user));
    if(fb_debug_console) consoleLog("url: " + url);

    $.ajax({
        url:    url,
        type:     'post',
        dataType:   'json',
        data:     user,
        statusCode: {
              404: function() {
                var message = 'Could not contact server.';
                displayGlobalMessage(message, "");
                if(fb_debug_console) consoleLog('doFacebookLogIn => Could not contact server.');
              },
              500: function() {
                var message = 'A server-side error has occurred.';
                displayGlobalMessage(message, "");
                if(fb_debug_console) consoleLog('doFacebookLogIn => A server-side error has occurred.');
              }
        },
        success:  function(data) {
            if(fb_debug_console) consoleLog(JSON.stringify(data));
            var message = data.msg;

            if(data.opt == "do-login"){
                if(fb_debug_console) consoleLog("Already registered, logging in");
                isFacebookRegistry = false;
                getFBUserInfo();
            } else{               
                if(data.res == "-1"){
                    if(fb_debug_console) consoleLog("can not login, registering");
                    isFacebookRegistry = true;
                    getFBUserInfo();
                } else{
                    if(fb_debug_console) consoleLog("Success, reloading");
                    location.reload();
                } 
            }   
              
          },
          fail:     function(error){
              $('#dvLoading').fadeOut();
              if(fb_debug_console) consoleLog(JSON.stringify(error));
          }
    });
}

function fb_logout(){
    try{
        FB.getLoginStatus(function(response) {
            if (response.status === 'connected') {
                FB.logout(function(response) {
                    // this part just clears the $_SESSION var
                    // replace with your own code 
                    if(fb_debug_console) consoleLog('Facebook logout succesfull');                   
                });
            }
            loggedWithFacebook=false;
        });
    } catch(e){
        if(fb_debug_console) consoleLog(e.message);
    }
}