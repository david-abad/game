var fbAccessToken = "";

function fb_login(){
    if(fb_debug_console) consoleLog("Doing FB login");
    //fb_logout();
    
    FB.login(function(response) {
        if (response.authResponse) {
            alreadyLogged = true;
            if(fb_debug_console) consoleLog("Logged In: " + response);
            if(fb_debug_console) consoleLog('Welcome!  Fetching your information.... ');
            //if(fb_debug_console) consoleLog(response); // dump complete info
            access_token = response.authResponse.accessToken; //get access token
            fbAccessToken = access_token;
            user_id = response.authResponse.userID; //get FB UID
            //alert(access_token);
            //alert(user_id);
            //if(fb_debug_console) consoleLog("access_token: " + access_token);
            //if(fb_debug_console) consoleLog("user_id: " + user_id);
            getFBUserInfo();
        } else {
            //user hit cancel button
            if(fb_debug_console) consoleLog('User cancelled login or did not fully authorize.');

        }
    }, {
        scope: 'public_profile, email'
    });
}

